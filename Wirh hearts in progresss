<body>

    <nav>
        <div class="nav-logo">AccessifiED</div>
        <div class="nav-links">
            <button onclick="showView('explore')">Explore</button>
            <button onclick="showView('post')" class="nav-btn-main">+ Add a Place</button>
            <button onclick="toggleDarkMode()">üåô Mode</button>
        </div>
    </nav>

    <div id="explore-view">
        <header class="hero-section">
            <h1>AccessifiED</h1>
            <p>Finding calm and accessible spaces for everyone.</p>
            <input type="text" id="searchInput" class="search-box" placeholder="Search by name or feature..." onkeyup="filterPlaces()">
        </header>

        <div class="explore-container">
            <aside class="sidebar">
                <div class="sidebar-header">
                    <h3 style="margin:0">Filters</h3>
                    <button class="clear-btn" onclick="clearFilters()">Clear All</button>
                </div>
                <div class="filter-group"><input type="checkbox" class="filter" id="wheel_chair"> <label for="wheel_chair">Wheelchair Access</label></div>
                <div class="filter-group"><input type="checkbox" class="filter" id="low_noise_level"> <label for="low_noise_level">Low Noise Level</label></div>
                <div class="filter-group"><input type="checkbox" class="filter" id="service_animals"> <label for="service_animals">Service Animals</label></div>
                <div class="filter-group"><input type="checkbox" class="filter" id="ASL_accessible"> <label for="ASL_accessible">ASL Accessible</label></div>
                <div class="filter-group"><input type="checkbox" class="filter" id="automatic_doors"> <label for="automatic_doors">Automatic Doors</label></div>
                <div class="filter-group"><input type="checkbox" class="filter" id="low_sensory"> <label for="low_sensory">Low Sensory</label></div>
                <div class="filter-group"><input type="checkbox" class="filter" id="screen_readers"> <label for="screen_readers">Screen Readers</label></div>
            </aside>
            <main id="places-list"></main>
        </div>
    </div>

    <div id="post-view" style="display: none;">
        <div class="post-form-container">
            <h2 style="color: var(--accent); margin-top:0;">Register a New Place</h2>
            <form id="postForm">
                <label>Business Name</label>
                <input type="text" id="name" placeholder="e.g. The Quiet Cafe" required style="width:100%; padding:12px; margin:10px 0; border-radius:10px; border:1px solid var(--tag-bg); background:var(--input-bg); color:var(--text-color); font-family:inherit;">
                
                <p><strong>Accessibility Features:</strong></p>
                <div class="checkbox-group">
                    <label style="display:block; margin-bottom:8px;"><input type="checkbox" id="wheelchair-checkbox"> Wheelchair Accessible</label>
                    <label style="display:block; margin-bottom:8px;"><input type="checkbox" id="ASL-checkbox"> ASL Services</label>
                    <label style="display:block; margin-bottom:8px;"><input type="checkbox" id="service-animals-checkbox"> Service Animals Allowed</label>
                    <label style="display:block; margin-bottom:8px;"><input type="checkbox" id="low-sensory-checkbox"> Low Sensory Environment</label>
                    <label style="display:block; margin-bottom:8px;"><input type="checkbox" id="automatic-doors-checkbox"> Automatic Doors</label>
                    <label style="display:block; margin-bottom:8px;"><input type="checkbox" id="low-noise-checkbox"> Low Noise Level</label>
                    <label style="display:block; margin-bottom:8px;"><input type="checkbox" id="screen-readers-checkbox"> Screen Readers Available</label>
                </div>

                <div class="input-group">
                    <label>Languages Spoken</label>
                    <input type="text" id="language-input" placeholder="e.g. English, Spanish" style="width:100%; padding:10px; margin-top:5px; border-radius:10px; border:1px solid var(--tag-bg);">
                </div>

                <div class="input-group" style="margin-top:15px;">
                    <label>Upload Entrance Photo</label>
                    <input type="file" id="image-upload" accept="image/*" style="display:block; margin-top:5px;">
                </div>

                <button type="submit" class="nav-btn-main" style="width:100%; margin-top:20px; padding: 15px; border-radius: 30px; font-size: 1.1rem; border:none; cursor:pointer; font-family:inherit;">Submit Spot</button>
            </form>
