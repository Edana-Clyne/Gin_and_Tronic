    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    <script>
        const _supabase = supabase.createClient('https://gxgopzsqfhckjjqaiqye.supabase.co', 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Imd4Z29wenNxZmhja2pqcWFpcXllIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NzE1OTYwMDgsImV4cCI6MjA4NzE3MjAwOH0.NggJExSSWG0jNRA_twt-KJYod2fVqhs7EkTElXjspzQ');

    let allPlaces = [];
    let userId = localStorage.getItem('userId') || ('user_' + Math.random().toString(36).substr(2, 9));
    localStorage.setItem('userId', userId);

    let userVotes = {};

    function toggleDarkMode() { document.body.classList.toggle('dark-mode'); }

    function showView(view) {
        document.getElementById('explore-view').style.display = view === 'explore' ? 'block' : 'none';
        document.getElementById('post-view').style.display = view === 'post' ? 'block' : 'none';
        if(view === 'explore') loadPlaces();
    }

    async function loadUserVotes() {
        const { data, error } = await _supabase.from('UserVotes').select('place_id, vote_type').eq('user_id', userId);
        if (!error && data) {
            userVotes = {};
            data.forEach(v => userVotes[v.place_id] = v.vote_type);
        }
    }

    async function loadPlaces() {
        const list = document.getElementById('places-list');
        list.innerHTML = '<p style="text-align:center">Loading...</p>';
        await loadUserVotes();
        const { data, error } = await _supabase.from('Places').select('*').order('id',{ ascending: true});
        if (!error) {
            allPlaces = data;
            filterPlaces();
        }
    }

    function filterPlaces() {
        const list = document.getElementById('places-list');
        const searchTerm = document.getElementById('searchInput').value.toLowerCase();
        const activeFilters = Array.from(document.querySelectorAll('.filter:checked')).map(cb => cb.id);
        
        list.innerHTML = '';

        allPlaces.forEach(p => {
            const matchesSearch = p.name.toLowerCase().includes(searchTerm);
            // Fix: Check if value is explicitly true
            const matchesFilters = activeFilters.length === 0 || activeFilters.every(fId => p[fId] === true);

            if (matchesSearch && matchesFilters) {
                let tags = '';
                ['wheel_chair', 'ASL_accessible', 'service_animals', 'low_sensory', 'automatic_doors', 'low_noise_level', 'screen_readers'].forEach(f => {
                    if (p[f]) tags += `<span class="tag">${f.replace(/_/g, ' ')}</span>`;
                });

                const hasVoted = userVotes[p.id] !== undefined;
                const userVoteType = userVotes[p.id] || '';
                const userVoteBadge = hasVoted ? `<span class="user-voted-badge">You voted ${userVoteType === 'likes' ? 'üëç' : 'üëé'}</span>` : '';

                list.innerHTML += `
                    <div class="place-card">
                        ${p.image_url ? `<img src="${p.image_url}" style="width:100%; height:160px; object-fit:cover; margin:-25px -25px 15px -25px; width:calc(100% + 50px);">` : ''}
                        <h3 style="margin-top:0; color:var(--accent)">${p.name} ${userVoteBadge}</h3>
                        <div>${tags}</div>
                        <small style="opacity: 0.7; display:block; margin-top:10px;">Languages: ${p.languages || 'None listed'}</small>
                        <div class="vote-container">
                            <div class="vote-item">
                                <button class="thumb-btn ${hasVoted && userVoteType === 'likes' ? 'voted' : ''}" 
                                        onclick="handleVote(${p.id}, 'likes')" ${hasVoted ? 'disabled' : ''}>
                                    <svg class="thumb-svg thumb-up-svg" viewBox="0 0 24 24"><path d="M1 21h4V9H1v12zm22-11c0-1.1-.9-2-2-2h-6.31l.95-4.57.03-.32c0-.41-.17-.79-.44-1.06L14.17 1 7.59 7.59C7.22 7.95 7 8.45 7 9v10c0 1.1.9 2 2 2h9c.83 0 1.54-.5 1.84-1.22l3.02-7.05c.09-.23.14-.47.14-.73v-2z"/></svg>
                                    <span class="vote-count">${p.likes || 0}</span>
                                </button>
                            </div>
                            <div class="vote-item">
                                <button class="thumb-btn ${hasVoted && userVoteType === 'dislikes' ? 'voted' : ''}" 
                                        onclick="handleVote(${p.id}, 'dislikes')" ${hasVoted ? 'disabled' : ''}>
                                    <svg class="thumb-svg thumb-down-svg" viewBox="0 0 24 24"><path d="M15 3H6c-.83 0-1.54.5-1.84 1.22l-3.02 7.05c-.09.23-.14.47-.14.73v2c0 1.1.9 2 2 2h6.31l-.95 4.57-.03.32c0 .41.17.79.44 1.06L9.83 23l6.58-6.59c.37-.36.59-.86.59-1.41V5c0-1.1-.9-2-2-2zm4 0v12h4V3h-4z"/></svg>
                                    <span class="vote-count">${p.dislikes || 0}</span>
                                </button>
                            </div>
                        </div>
                    </div>`;
            }
        });
    }

    // Attach listeners to checkboxes so they filter immediately
    document.querySelectorAll('.filter').forEach(checkbox => {
        checkbox.addEventListener('change', filterPlaces);
    });

   async function handleVote(id, type) {
    console.log("Voting for ID:", id, "Type:", type);

    if (userVotes[id]) {
        alert("You've already voted for this place!");
        return;
    }

    // 1. OPTIMISTIC UPDATE: Update the UI immediately so it doesn't feel "blank"
    userVotes[id] = type;
    
    // 2. Call the SQL Function
    // NOTE: We ensure the column name is exactly what the DB expects
    const { error: rpcError } = await _supabase.rpc('increment_vote', { 
        row_id: parseInt(id), 
        column_name: type.toLowerCase() // Forces lowercase to match 'likes'/'dislikes'
    });

    if (rpcError) {
        console.error("RPC Error:", rpcError);
        delete userVotes[id]; // Revert vote if it failed
        alert("Vote failed! Error: " + rpcError.message);
        return;
    }

    // 3. Log the vote in the UserVotes table
    await _supabase.from('UserVotes').insert([{
        user_id: userId,
        place_id: parseInt(id),
        vote_type: type
    }]);

    // 4. Refresh data silently
    const { data: updatedData } = await _supabase.from('Places').select('*');
    if (updatedData) {
        allPlaces = updatedData;
        filterPlaces(); // This refreshes the numbers without the "Loading..." flicker
    }
}
    function clearFilters() {
        document.querySelectorAll('.filter').forEach(cb => cb.checked = false);
        document.getElementById('searchInput').value = '';
        filterPlaces();
    }

    document.getElementById('postForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        const btn = e.target.querySelector('button');
        btn.innerText = 'Saving...'; btn.disabled = true;

        let imageUrl = "";
        const file = document.getElementById('image-upload').files[0];
        if (file) {
            const fileName = `${Math.random()}.${file.name.split('.').pop()}`;
            const { data: upData } = await _supabase.storage.from('place-images').upload(fileName, file);
            if (upData) imageUrl = _supabase.storage.from('place-images').getPublicUrl(fileName).data.publicUrl;
        }

        const { error } = await _supabase.from('Places').insert([{
            name: document.getElementById('name').value,
            image_url: imageUrl,
            wheel_chair: document.getElementById('wheelchair-checkbox').checked,
            service_animals: document.getElementById('service-animals-checkbox').checked,
            ASL_accessible: document.getElementById('ASL-checkbox').checked,
            automatic_doors: document.getElementById('automatic-doors-checkbox').checked,
            low_noise_level: document.getElementById('low-noise-checkbox').checked,
            screen_readers: document.getElementById('screen-readers-checkbox').checked,
            low_sensory: document.getElementById('low-sensory-checkbox').checked,
            languages: document.getElementById('language-input').value,
            likes: 0,
            dislikes: 0
        }]);

        if (error) alert("Error: " + error.message);
        else { alert("Success!"); e.target.reset(); showView('explore'); }
        btn.innerText = 'Submit Spot'; btn.disabled = false;
    });

    loadPlaces();
    </script>
</body>
